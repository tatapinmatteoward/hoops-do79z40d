---
const currentYear = new Date().getFullYear();
const socialLinks = [
  { icon: 'fab fa-twitter', url: '#' },
  { icon: 'fab fa-facebook', url: '#' },
  { icon: 'fab fa-instagram', url: '#' },
  { icon: 'fab fa-youtube', url: '#' }
];
---

<footer class="bg-slate-800 text-white py-8 border-t-4 border-yellow-500">
  <div class="container mx-auto px-4 text-center">
    <p class="text-lg font-bold">&copy; {currentYear} HoopsHaven Insights. All rights reserved.</p>
    <div class="flex justify-center gap-6 mt-4">
      {socialLinks.map((link) => (
        <a href={link.url} class="text-white hover:text-yellow-500 transition-colors duration-300 text-xl">
          <i class={link.icon}></i>
        </a>
      ))}
    </div>
  </div>
</footer>